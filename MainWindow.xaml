<Window x:Class="NetworkMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Мониторинг сети" Height="450" Width="800">
    <Grid>
        <TabControl>
            <!-- Вкладка для списка активных подключений -->
            <TabItem Header="Активные подключения">
                <DataGrid Name="ActiveConnectionsGrid" AutoGenerateColumns="True" IsReadOnly="True" Margin="10"/>
            </TabItem>

            <!-- Вкладка для мониторинга трафика -->
            <TabItem Header="Мониторинг трафика">
                <StackPanel Margin="10">
                    <TextBlock Text="Входящий трафик:" FontWeight="Bold"/>
                    <TextBlock Name="IncomingTrafficText" Text="0 байт"/>
                    <TextBlock Text="Исходящий трафик:" FontWeight="Bold" Margin="0,10,0,0"/>
                    <TextBlock Name="OutgoingTrafficText" Text="0 байт"/>
                </StackPanel>
            </TabItem>

            <!-- Вкладка для блокировки IP/портов -->
            <TabItem Header="Блокировка">
                <StackPanel Margin="10">
                    <TextBlock Text="Введите IP-адрес для блокировки:"/>
                    <TextBox Name="IpToBlockTextBox" Margin="0,5,0,10"/>
                    <Button Content="Блокировать IP" Click="BlockIp_Click" Width="150" Height="30"/>
                    <TextBlock Text="Введите порт для блокировки:" Margin="0,10,0,0"/>
                    <TextBox Name="PortToBlockTextBox" Margin="0,5,0,10"/>
                    <Button Content="Блокировать порт" Click="BlockPort_Click" Width="150" Height="30"/>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</Window>